{
  "compilerOptions": {
    // Node.js environment
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",

    // TypeScript helpers
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // Type support
    "types": ["node"],

    // Output
    "outDir": "./dist",

    // Strictness
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
