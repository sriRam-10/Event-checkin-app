{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@screens/*": ["screens/*"],
      "@navigation/*": ["navigation/*"],
      "@api/*": ["api/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
